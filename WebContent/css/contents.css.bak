@charset "utf-8";

/* Background Style */
body.body_bg {margin:0;padding:0;background:white;}
.over {background-color:#eaeaea;}

/* Border Style */
.border_trl {border:1px solid #ccc;border-bottom:0;}

/* Title */
.page_title {height:50px;margin:0;padding:0;background:url(../images/bg/bg_page_title.gif) top left repeat-x;}
.page_title h1 {font:bold 20px/50px tahoma,dotum;white-space:nowrap;margin:0;padding:0;color:black;height:50px;background:url(../images/bg/bg_page_title_h1.gif) top right no-repeat;}
.page_title h1 strong {display:block;float:left;height:50px;background:url(../images/bg/bg_page_title_strong.gif) top left no-repeat;background-color:white;}
.page_title h1 span {display:block;float:left;height:50px;background:url(../images/bg/bg_page_title_span.gif) top right no-repeat;padding:0 40px 0 35px;}

/* Div Layout */
div.wrap {position:relative;overflow:auto;overflow:hidden;}
div.layout {overflow:hidden;margin:0 20px;_width:100%;}

/* Input */
input {border-top:1px solid #ccc;border-left:1px solid #ccc;border-right:1px solid #eee;border-bottom:1px solid #eee;height:22px;padding:0 3px;_padding:3px 3px 0 3px;vertical-align:middle;}
input.check,input.radio {border:0;vertical-align:middle;}
input.cal {width:89px;background:url(../images/ico/ico_cal.gif) right no-repeat;}
input.cal_month {width:73px;background:url(../images/ico/ico_cal.gif) right no-repeat;}
input.time {width:80px;background:url(../images/ico/ico_time.gif) right no-repeat;}
input.phone {width:150px;background:url(../images/ico/ico_phone.gif) right no-repeat;}
input.tran {border:0 !important;padding:3px 2px 0px 2px;background-color:transparent;vertical-align:middle;}
select {font-size:12px;vertical-align:middle;}

span.in_txt {line-height:10px;display:inline-block;padding:0 3px;}

/* Table Write */
div.input_area,
div.view_area,
div.comment_area,
div.list_area {position:relative;overflow:auto;overflow:hidden;}
div.view_area .layout,
div.input_area .layout,
div.list_area .layout {overflow:hidden;margin:0 15 10 15px;_width:100%;}
div.input_area h2,
div.list_area h2 {color:black;font:bold 14px/30px arial,dotum;margin:15px 0 0 0;padding:0 0 0 15px;background:url(../images/bg/bg_h2.gif) top left no-repeat;}
div.input_area table {width:100%;table-layout:fixed;border-top:1px solid #ccc;border-bottom:1px solid #ccc}
div.input_area th,
div.input_area td {font-size:12px;line-height:15px;border-bottom:1px dotted #ccc;}
div.input_area th {text-align:left;padding:8px 10px;_padding:9px 10px;background-color:#f6f6f6;}
div.input_area th.ind {background:url(../images/bg/bg_th_ind.gif) top left no-repeat;background-color:#f6f6f6;}
div.input_area td {padding:4 5 4 5px;}

div.list_area table {width:100%;table-layout:auto;border:1px solid #ccc;}
div.list_area th,
div.list_area td {font-size:12px;line-height:15px;border:1px dotted #ccc;}
div.list_area th {padding:8px 10px;_padding:9px 10px;border:1px solid #ccc;border-bottom:2px solid #9bb5d2;background:url(../images/bg/bg_th_list.gif) top left repeat-x;background-color:#f6f6f6;}
div.list_area td {padding:4 5px;_padding:5px 5px;}

div.view_area table {width:100%;table-layout:auto;border:1px solid #ccc;}
div.view_area th,
div.view_area td {font-size:12px;line-height:15px;border-bottom:1px  #ccc;}
div.view_area th {text-align:left;padding:8px 10px;_padding:9px 10px;background-color:#f6f6f6;}
div.view_area th.ind {background:url(../images/bg/bg_th_ind.gif) top left no-repeat;background-color:#f6f6f6;}
div.view_area td {padding:10 15 10 15px;}
div.view_area td.title {font-size:12px;font-weight:bold;line-height:15px;border-bottom:1px dotted #ccc;}
div.view_area td.sub {font-size:11px;color:#787878;line-height:15px;border-bottom:1px;padding:12 15 20 15px;}
div.view_area td.file {font-size:11px;;line-height:15px;border-bottom:1px;}

div.comment_area .layout {overflow:hidden;margin:0px;_width:100%;}
div.comment_area h2 {color:#3C5A91;font:bold 12px/30px arial,dotum;margin:15px 0 0 0;padding:0 0 0 0px;}
div.comment_area table {width:100%;table-layout:auto;  background-color:rgb(247, 247, 247);}
div.comment_area th,
div.comment_area td {color:#5a5a5a;font-size:12px;line-height:15px;border-bottom:1px dotted #ccc;}
div.comment_area th {text-align:left;padding:8px 10px;_padding:9px 10px;background-color:#f6f6f6;}
div.comment_area th.ind {background:url(../images/bg/bg_th_ind.gif) top left no-repeat;background-color:#f6f6f6;}
div.comment_area td {padding:5 10 5 10px;}
div.comment_area td.space {font-size:11px;color:#787878;line-height:15px;border-bottom:1px}
div.comment_area td.sub {font-size:11px;color:#5a5a5a;line-height:15px;border-bottom:1px;padding5 10 5 10px;}
div.comment_area td.file {font-size:11px;;line-height:15px;border-bottom:1px;}

/* Button Area */
.btn_area {padding:7px 15px 7px 5px;}

/* Button */
.btn{display:inline-block;padding-right:4px;background:url(../images/bg/bg_btn.gif) no-repeat 100% 0;font:bold 12px/24px;color:black;line-height:24px;word-spacing:-1px;text-decoration:none !important;white-space:nowrap;vertical-align:middle;}
a.btn span,a.btn strong{display:block;padding:0 5px 0 8px;background:url(../images/bg/bg_btn.gif) no-repeat;font-size:12px;}
a.btn img {float:left;margin:6px 4px 0 0;}
a.btn_s {display:inline-block;padding-right:4px;background:url(../images/bg/bg_btn.gif) no-repeat 100% -27px;font-family:'돋움',dotum;font-size:11px;color:#444;line-height:20px;letter-spacing:-1px;word-spacing:-1px;text-decoration:none !important;white-space:nowrap;vertical-align:middle;}
a.btn_s span,a.btn_s strong {display:block;padding:1px 4px 0 8px;background:url(../images/bg/bg_btn.gif) no-repeat 0 -27px}  
a.btn_s img {float:left;margin:4px 5px 0 0;}
a.btn:hover,
a.btn_s:hover {color:#005a9f;}

.txt{text-decoration:none;color:black}
a.txt:hover {color:#005a9f;text-decoration:underline}

.txt_s{text-decoration:none;color:#5a5a5a}
a.txt_s:hover {color:#5a5a5a;text-decoration:underline}


/* Paginate */
.paginate            { padding:10px 2 0 0; text-align:center;height:30px;}
.paginate *          { margin:0 5 0 5px; padding:0;}
.paginate a,
.paginate strong     {_position:relative; margin-left:-7px; font-weight:bold; display:inline-block; padding:3px 8px 1px 7px; color:#313031;  border-right:1px solid #ccc; text-decoration:none; line-height:normal; font:bold 12px; background:#fff;}
.paginate strong     {color:#00a3ff!important;}
.paginate a:hover    {background:#F7F7F7;}
.paginate a.pre      {padding:3px 8px 1px 16px; background:url(../images/ico/ico_pg_l1.gif) no-repeat 8px 6px !important; border:none; font-weight:normal; }
.paginate a.pre_end  {padding:3px 8px 1px 16px; background:url(../images/ico/ico_pg_l2.gif) no-repeat 4px 6px !important; border:none; border-right:1px solid #ccc; font-weight:normal;}
.paginate a.next     {padding:3px 16px 1px 8px; background:url(../images/ico/ico_pg_r1.gif) no-repeat 37px 6px !important; border:none; font-weight:normal; }
.paginate a.next_end {padding:3px 16px 1px 8px; background:url(../images/ico/ico_pg_r2.gif) no-repeat 37px 6px !important; border:none; border-left:1px solid #ccc; font-weight:normal;}